<Window x:Class="OpenOffice.Odswiezacz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenOffice"
        mc:Ignorable="d"
        Title="OpenOffice 4.1.3" Height="240" Width="400">
    <StackPanel>
        <Button x:Name="btnStart" Content="Start" Margin="10" Height="50" Click="Button_Click"
                FontSize="20"/>
        
        <Button Content="Stop" Margin="10" Height="50" Click="Button_Click_1"
                FontSize="20"/>
        
        <TextBlock x:Name="txtNastepny" TextWrapping="Wrap"
                   Margin="10" Height="50" TextAlignment="Center" FontSize="20"
                   Text="Ostatni ruch @"/>
    </StackPanel>
</Window>
